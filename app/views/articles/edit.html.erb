<h1>Editing Article</h1>
 
<%# form_for :Article, url: article_path(@article), method: :patch do |f| %>
<%= form_for(@article) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, value:"#{@article.title}" %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, value:"#{@article.text}" %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', article_path %>