<div class="container">

<%= form_for :session, url: sessions_path, html:{ class: "form form-signin", role: "form"} do |f| %>

	<h2 class="form-signin-heading">Please sign in</h2>

	<%# render 'shared/error_messages' %>

	<%= f.email_field :email, class: "form-control first", placeholder: "Email address", required: true, autofocus: true %>
	<%= f.password_field :password, class: "form-control last", placeholder: "Password", required: true %>

	<label class="checkbox">
	  <input type="checkbox" value="remember-me" disabled> Remember me
	</label>
	
	<%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>

<% end %>

</div> <!-- /container -->