<h1>Edit User</h1>
 
<%# form_for :User, url: user_path(@user), method: :patch do |f| %>
<%= form_for(@user) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, value:"#{@user.name}" %>
  </p>
 
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email, value:"#{@user.email}" %>
  </p>

 <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

 <p>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', user_path %>